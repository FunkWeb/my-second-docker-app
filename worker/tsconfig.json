{
  "compilerOptions": {
    "rootDir": "../",
    "outDir": "./dist",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": "../",
    "paths": {
      "@shared/*": ["shared/*"],
      "@backend/*": ["backend/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "../shared/**/*",
    "../backend/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}